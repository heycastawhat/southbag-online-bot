{
  "_metadata": {
    "major_version": 1
  },
  "display_information": {
    "name": "Southbag Support",
    "description": "Deliberately terrible customer support bot for Southbag Online Banking.",
    "background_color": "#1a1a2e"
  },
  "features": {
    "bot_user": {
      "display_name": "Southbag Support",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/south-open-account",
        "description": "Open a Southbag Online Banking account",
        "usage_hint": "[your name]",
        "should_escape": false
      },
      {
        "command": "/south-balance",
        "description": "Check your account balance (fee applies)",
        "should_escape": false
      },
      {
        "command": "/south-deposit",
        "description": "Deposit money into a user's account (admin only)",
        "usage_hint": "@user <amount>",
        "should_escape": true
      },
      {
        "command": "/south-transfer",
        "description": "Transfer money to someone (fees apply)",
        "usage_hint": "<amount> <recipient>",
        "should_escape": true
      },
      {
        "command": "/south-transactions",
        "description": "View your transaction history",
        "should_escape": false
      },
      {
        "command": "/south-loan",
        "description": "Apply for a loan (spoiler: denied)",
        "usage_hint": "<amount>",
        "should_escape": false
      },
      {
        "command": "/south-rob",
        "description": "Rob another user's Southbag account",
        "usage_hint": "@someone",
        "should_escape": true
      },
      {
        "command": "/south-job",
        "description": "Apply for a job at Southbag (you'll regret it)",
        "should_escape": false
      },
      {
        "command": "/south-work",
        "description": "Complete a shift at your Southbag job",
        "should_escape": false
      },
      {
        "command": "/south-quit",
        "description": "Quit your Southbag job",
        "should_escape": false
      },
      {
        "command": "/south-coinflip",
        "description": "Flip a coin â€” 1.8x payout (house edge)",
        "usage_hint": "<amount> <heads|tails>",
        "should_escape": false
      },
      {
        "command": "/south-slots",
        "description": "Spin the Southbag slot machine",
        "usage_hint": "<amount>",
        "should_escape": false
      },
      {
        "command": "/south-gamble",
        "description": "Card games. High risk, high reward.",
        "usage_hint": "<amount> <game>",
        "should_escape": false
      },
      {
        "command": "/south-notifs",
        "description": "Toggle balance change DM notifications on/off",
        "should_escape": false
      },
      {
        "command": "/south-mystery-fee",
        "description": "Charge yourself a mystery fee. Why would you.",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "channels:history",
        "chat:write",
        "commands",
        "im:history",
        "im:read",
        "im:write",
        "reactions:write",
        "users:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_mention",
        "message.channels",
        "message.im"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
